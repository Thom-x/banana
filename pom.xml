<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.aleclerc.banana</groupId>
	<artifactId>banana-parent</artifactId>
	<version>1.0.1</version>
	<packaging>pom</packaging>

	<scm>
		<developerConnection>scm:git:https://github.com/amauryleclerc/banana.git</developerConnection>
		<tag>banana-parent-1.0.1</tag>
	</scm>


	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>

		<!-- dependencies version -->
		<querydsl.version>4.0.7</querydsl.version>
		<springfox.version>2.6.1</springfox.version>
		<rxjava.version>2.0.6</rxjava.version>
		<jasypt.version>1.9.2</jasypt.version>

		<!-- plugins version -->
		<frontend.plugin.version>1.4</frontend.plugin.version>
		<node.version>v6.11.1</node.version>
		<npm.version>5.3.0</npm.version>
		<release.plugin.version>2.5.3</release.plugin.version>
		<apt.plugin.version>1.1.3</apt.plugin.version>
		<wagon-ftp.version>2.10</wagon-ftp.version>

	</properties>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.4.RELEASE</version>
	</parent>

	<modules>
		<module>frontend</module>
		<module>backend</module>
		<module>dist</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<!-- Swagger Spring -->
			<dependency>
				<groupId>io.springfox</groupId>
				<artifactId>springfox-swagger2</artifactId>
				<version>${springfox.version}</version>
			</dependency>
			<!-- Swagger UI -->
			<dependency>
				<groupId>io.springfox</groupId>
				<artifactId>springfox-swagger-ui</artifactId>
				<version>${springfox.version}</version>
			</dependency>
			<dependency>
				<groupId>io.springfox</groupId>
				<artifactId>springfox-data-rest</artifactId>
				<version>${springfox.version}</version>
			</dependency>
			<!-- RxJava -->
			<dependency>
				<groupId>io.reactivex.rxjava2</groupId>
				<artifactId>rxjava</artifactId>
				<version>${rxjava.version}</version>
			</dependency>
			<!-- jasypt -->
			<dependency>
				<groupId>org.jasypt</groupId>
				<artifactId>jasypt</artifactId>
				<version>${jasypt.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.mysema.maven</groupId>
					<artifactId>apt-maven-plugin</artifactId>
					<version>${apt.plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>com.github.eirslett</groupId>
					<artifactId>frontend-maven-plugin</artifactId>
					<version>${frontend.plugin.version}</version>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>${release.plugin.version}</version>
			</plugin>
		</plugins>

		<!-- allow deployment to ftp servers -->
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>${wagon-ftp.version}</version>
			</extension>
		</extensions>


	</build>

	<!-- deploy released artifacts to FTP -->
	<distributionManagement>
		<repository>
			<id>server1</id>
			<url>ftp://pedrocloud.freeboxos.fr/home/minion/</url>
			<uniqueVersion>false</uniqueVersion>
		</repository>
	</distributionManagement>


</project>
